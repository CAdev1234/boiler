            <script>
                jQuery(".picScroll-left").slide({ titCell: ".hd ul", mainCell: ".bd ul", autoPage: true, effect: "leftLoop", autoPlay: false, vis: 2, delayTime: 700 })
            </script>
            @Html.Raw(ViewBag.sj_pro)

            <!--about us-->
            @Html.Raw(ViewBag.sj_aboutus)
            <!--customercase-->
            @Html.Raw(ViewBag.sj_customercase)
            
