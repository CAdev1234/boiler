@model List<ykmWeb.Models.guestbook>
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit" />
    <title>网站后台管理系统</title>
    <link rel="shortcut icon" href="/img/favicon.ico">
    <link href="/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <!-- Morris -->
    <link href="/css/plugins/morris/morris-0.4.3.min.css" rel="stylesheet">
    <!-- Gritter -->
    <link href="/js/plugins/gritter/jquery.gritter.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css?v=4.1.0" rel="stylesheet">

    <link href="/css/index.css" rel="stylesheet" type="text/css">
    <script src="/Scripts/jquery-1.10.2.min.js"></script>

    <script src="/Scripts/menu.js"></script>
    <!--日期控件 -->
    <link href="/bootstrap/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css">
    <script src="/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/bootstrap/datetimepicker/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/bootstrap/datetimepicker/locales/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>

    <script src="~/Scripts/user_main_nclass.js"></script>
    <script src="~/layer/layer.js"></script>
    <script src="~/Scripts/batch_ctrl.js"></script>
</head>
<body class="gray-bg">

    <div class="wrapper wrapper-content">

        <div class="wpadd2">
            <div class="listbox overf liheig36 ibox-content p-md m-b">
                <form action="" method="get" name="form1" id="form1">
                    <label for="key" class="left m-r">快速查找</label>
                    <input type="text" class="form-control w10 left m-r" id="key" name="key" placeholder="输入关键词" value="">
                    <label for="title" class="left m-r">留言时间</label>
                    <div class="w10 left m-r">
                        <div class='input-group date' id='datetimepicker1' data-date-format="yyyy-mm-dd">
                            <input type='text' name="sdata" id="sdata" value="" class="form-control" readonly />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="left m-r">至</div>
                    <div class="w10 left m-r">
                        <div class='input-group date' id='datetimepicker2' data-date-format="yyyy-mm-dd">
                            <input type='text' name="edata" id="edata" value="" class="form-control" readonly />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <button class="btn btn-success m-r">开始查询</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>所有信息( @ViewBag.infocount 条）</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                     <th width="15%" class="tc">留言时间</th>
                                        <th width="15%" class="tc">姓名</th>
                                        <th width="15%" class="tc">联系电话</th>
                                        <th width="15%" class="tc">电子邮箱</th>
                                        <th width="30%" class="tc">留言内容</th>
                                        <th width="10%" class="tc">设置</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td class="tc">@i.insertdate</td>
                                        <td class="tc">@i.name</td>
                                        <td class="tc">@i.tel</td>
                                        <td class="tc">@i.email</td>
                                        <td>@i.cont</td>
                                        <td class="tc">
                                            @Html.ActionLink("删除信息", "del", new { id = i.id }, new { onclick = "return confirm('确定要删除吗？')" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="footpage">
                            @Html.Raw(ViewBag.footpage)
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <script>
        $('#datetimepicker1').datetimepicker({
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

        $('#datetimepicker2').datetimepicker({
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
        </script>
</body >
</html >
