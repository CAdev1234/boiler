@model ykmWeb.Models.LoginViewModel
<!DOCTYPE html>
<html>
<head lang="en">

    <meta charset="UTF-8">
    <meta name="renderer" content="webkit" />
    <title>网站后台管理系统</title>

    <link rel="shortcut icon" href="/img/favicon.ico">
    <link href="/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css?v=4.1.0" rel="stylesheet">
    @*<script>
            if (window.top !== window.self) {
                window.top.location = window.location;
            }
        </script>*@
    <link href="/css/index.css" rel="stylesheet">
    <script src="/js/jquery.min.js?v=2.1.4"></script>
    <script src="/js/bootstrap.min.js?v=3.3.6"></script>
    <!--表单验证 -->
    <script type="text/javascript" src="/bootstrap/Val/bootstrapValidator.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/bootstrap/Val/language/zh_CN.js" charset="UTF-8"></script>
    <link rel="stylesheet" type="text/css" href="/bootstrap/Val/bootstrapValidator.min.css">
    <script src="/bootstrap/Val/Validator_form.js"></script>
</head>

<body class="gray-bg" style="background-image:url('http://www.yalujiang.cn/loginImg/@ViewData["bgimg"]');background-position:top center;background-repeat:no-repeat;background-size:cover;">
    
    <div style="width:850px; margin:0 auto; overflow:hidden;">
        <div class="middle-box tc loginscreen  animated fadeInDown" style="float:right;">
            <div>
                <div>
                    <h1 class="logo-name"><img src="/images/logo.png" /></h1>
                </div>
                <h3 class="font-gray">网站后台管理系统</h3>

                @{
                    var pass1 = "required data-bv-notempty-message=密码不能为空！";
                    var pass0 = "required data-bv-notempty-message=用户名不能为空！  ";
                }
                @using (Html.BeginForm("Login", "webmaster", FormMethod.Post, new { id = "form2", name = "form2", @class = "m-t" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="RememberMe" id="RememberMe" value="false" />

                    <div class="form-group martop1" style="margin-bottom: 15px">
                        <input type="text" name="UserName" id="UserName" class="form-control input-lg" placeholder="用户名" required="" value="@Model.UserName" @pass0 />
                    </div>
                    <div class="form-group martop1">
                        <input type="password" class="form-control input-lg" placeholder="密码" required="" value="@Model.Password" name="Password" id="Password" @pass1 />
                    </div>
                    <div class="form-group martop1" style="overflow:hidden; display:flex; justify-content:space-between;margin-bottom: 15px">
                        <input type="text" style="width:60%;" class="form-control col-sm-6 input-lg" id="checkcode" name="checkcode" placeholder="验证码" required data-bv-notempty-message="验证码不能为空！" data-bv-remote="true" data-bv-remote-url="/management/webmaster/checkcode" data-bv-remote-message="验证码错误" />
                        <img src="/management/getCheckCode" width="100" height="46" style="cursor:pointer" onclick="this.src = '/management/getCheckCode?t=' + Math.random()" />
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
                    <p class="text-muted text-left font-gray">
                        <label style="cursor:pointer;"><input type="checkbox" @(Model.RememberMe == true ? "checked" : "") name="savepass" value="true" /> 记住密码</label>
                    </p>
                    <p class="text-muted tc signup-footer font-gray">
                        <small>
                            技术支持：<a href="http://www.yalujiang.cn/" target="_blank" style="color:#fff">丹东鸭绿江网络技术有限公司</a> <br />
                            电话：0415-3124567     传真：0415-3170052     邮箱 : ylj@yalujiang.cn     鸭网公众号：鸭绿江网络
                        </small>
                    </p>
                }
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script>
        $(document).ready(function () {
            var s = new Valform();
            s.check("form2", true);
        });
    </script>
</body>
</html>