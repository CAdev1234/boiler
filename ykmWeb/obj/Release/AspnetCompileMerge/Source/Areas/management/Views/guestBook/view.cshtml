@model  ykmWeb.Models.regform
@{ 
    ykmWeb.Bll.user_config_type uct = new ykmWeb.Bll.user_config_type("chk_s");
}
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit" />
    <title>后台管理系统</title>
    <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap-theme.min.css">
    <link href="/css/index.css" rel="stylesheet" type="text/css">
    <script src="/Scripts/jquery-1.10.2.min.js"></script>

    <script src="/Scripts/menu.js"></script>
    <!--日期控件 -->
    <link href="/bootstrap/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css">
    <script src="/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/bootstrap/datetimepicker/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/bootstrap/datetimepicker/locales/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>

    <script src="~/Scripts/user_main_nclass.js"></script>
    <script src="~/layer/layer.js"></script>
    <script src="~/Scripts/batch_ctrl.js"></script>
</head>
<body>

    @{
        Html.RenderAction("toppart", "TopPart");
    }

    <div class="main">
        <div class="mainw">
            <div class="leftpar">
                <span class="mdate" id="showtime"></span>
                <script src="~/Scripts/dateshow.js"></script>
            </div>
            <div class="rightpar">
                <div class="menuright">
                    @{
                        Html.RenderAction("showtopmenu", "topmenu", new { id = "7", cid = "2" });
                    }
                </div>
            </div>
        </div>

    </div>
    <div class="main2">
        <div class="mainw">
            <div class="leftpar">
                @{
                    Html.RenderAction("listleftMenu", "leftpart");
                }
            </div>
            <div class="rightpar">

                <div class="wpadd2">
                    <div class="listbox">
                        <div class="cont">
                            <div class="w100 left bor2 ">
                                <div class="tabst1">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th class="col-md-2">留言时间：</th>
                                            <td class="col-md-4">@Model.infodate.Value</td>
                                            <th class="col-md-2">查看状态：</th>
                                            <td class="col-md-4">@uct.get_text(Model.state.ToString())</td>
                                        </tr>
                                        <tr>
                                            <th class="col-md-2">姓名：</th>
                                            <td class="col-md-4">@Model.name</td>
                                            <th class="col-md-2">汉语拼音</th>
                                            <td class="col-md-4">@Model.pinyin</td>
                                        </tr>
                                        <tr>
                                            <th>性别：</th>
                                            <td>@Model.sex</td>
                                            <th>职业：</th>
                                            <td>@Model.job</td>
                                        </tr>
                                        <tr>
                                            <th>国家：</th>
                                            <td>@Model.country</td>
                                            <th>电话号码：</th>
                                            <td>@Model.tel</td>
                                        </tr>
                                        <tr>
                                            <th>住址：</th>
                                            <td colspan="3">@Model.address</td>
                                        </tr>
                                        <tr>
                                            <th>电子邮箱地址：</th>
                                            <td colspan="3">@Model.email</td>
                                        </tr>
                                        <tr>
                                            <th>咨询内容：</th>
                                            <td colspan="3">@Model.cont</td>
                                        </tr>
                                    </table>
                                    <div style="text-align:center; margin-bottom:30px;"><a href="/management/guestBook/regform">返回列表</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="botbox left w100 mtop1">
        <div class="bot">
            <script src="~/Scripts/htbot.js"></script>
        </div>
    </div>

</body>
</html>