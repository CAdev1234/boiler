@model IEnumerable<sand.model.shoplinkclass>
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8"><meta name="renderer"content="webkit" />
    <title>后台管理系统</title>
    <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap-theme.min.css">
    <link href="/css/index.css" rel="stylesheet" type="text/css">
    <script src="/Scripts/jquery-1.10.2.min.js"></script>

    <script src="/Scripts/menu.js"></script>
    <!--日期控件 -->
    <link href="/bootstrap/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css">
    <script src="/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/bootstrap/datetimepicker/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/bootstrap/datetimepicker/locales/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>

    <script src="~/Scripts/user_main_nclass.js"></script>
    <script src="~/layer/layer.js"></script>
    <script src="~/Scripts/batch_ctrl.js"></script>
</head>
<body>

    @{
        Html.RenderAction("toppart", "TopPart");
    }

    <div class="main">
        <div class="mainw">
            <div class="leftpar">
                <span class="mdate" id="showtime"></span>
                <script src="~/Scripts/dateshow.js"></script>
            </div>
            <div class="rightpar">
                <div class="menuright">
                    @{
                        Html.RenderAction("showtopmenu", "topmenu", new { id = "8", cid = "2" });
                    }
                </div>
            </div>
        </div>

    </div>
    <div class="main2">
        <div class="mainw">
            <div class="leftpar">
                @{
                    Html.RenderAction("listleftMenu", "leftpart");
                }
            </div>
            <div class="rightpar">
                <div class="wpadd2">
                    <div class="listbox">
                        <div class="cont">
                            <h4 class="title left">所有信息( @ViewBag.infocount 条）</h4>
                            <div class="form-group  right">
                                <a href="/yljmanager/link/editclass" class="btn btnstyle1">添加</a>
                            </div>
                            <div class="w100 left bor2 ">
                                <div class="tabst1">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th width="5%"><input type="checkbox" class="batch_ckall" id="ckall" name="ckall" /></th>
                                                <th width="85%">分类名称</th>
                                                <th width="10%">设置</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var i in Model)
                                            {
                                                var name = "ck" + i.id.Value;
                                                <tr>
                                                    <td><input type="checkbox" id="@name" value="@i.id" name="ck" /></td>
                                                    <td>
                                                        @i.classname
                                                    </td>
                                                    <td>
                                                        <div class="myedit">
                                                            <div>
                                                                <span class=" glyphicon glyphicon-edit"></span>
                                                                @Html.ActionLink("编辑", "editclass", new { id = i.id })

                                                            </div>
                                                            <ul>
                                                                <li>@Html.ActionLink("编辑", "editclass", new { id = i.id })</li>
                                                                <li>@Html.ActionLink("删除", "del", new { id = i.id }, new { @onclick = "return confirm('确定要删除吗，操作不可恢复!')" })</li>

                                                            </ul>
                                                        </div>

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="footpage">
                                    @Html.Raw(ViewBag.footpage)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <div class="botbox left w100 mtop1">
            <div class="bot">
                <script src="~/Scripts/htbot.js"></script>
            </div>
        </div>
</body>
</html>