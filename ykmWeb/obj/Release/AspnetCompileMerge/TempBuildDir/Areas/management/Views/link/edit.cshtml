@model ykmWeb.Models.link
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit" />
    <title>后台管理系统</title>
    <link rel="shortcut icon" href="/img/favicon.ico">
    <link href="/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <!-- Morris -->
    <link href="/css/plugins/morris/morris-0.4.3.min.css" rel="stylesheet">
    <!-- Gritter -->
    <link href="/js/plugins/gritter/jquery.gritter.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css?v=4.1.0" rel="stylesheet">


    <link href="/bootstrap/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css">
    <link href="/css/index.css" rel="stylesheet" type="text/css">
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>


    <!--表单验证 -->
    <script type="text/javascript" src="/bootstrap/Val/bootstrapValidator.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/bootstrap/Val/language/zh_CN.js" charset="UTF-8"></script>
    <link rel="stylesheet" type="text/css" href="/bootstrap/Val/bootstrapValidator.min.css">
    <script src="/bootstrap/Val/Validator_form.js"></script>
    <!--文件上传 -->
    <script src="~/bootstrap/upfiles/fileinput.min.js"></script>
    <script src="~/bootstrap/upfiles/zh.js"></script>
    <link href="~/bootstrap/upfiles/fileinput.min.css" rel="stylesheet" />
    <script src="~/bootstrap/upfiles/upfilesCtrl.js"></script>
    <script src="~/Scripts/upload_info_ctrl.js"></script>

</head>
<body>
    <div class="wrapper wrapper-content">
        <div class="listbox overf ibox-content m-b">
            <div class="cont">
                @using (Html.BeginForm("save", "link", FormMethod.Post, new { id = "form2", name = "form2" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@ViewBag.savetype" name="savetype" id="savetype" />
                    <input type="hidden" value="@Model.id" name="id" id="id" />
                    <div class="form-horizontal">
                        <ul id="myTab" class="nav nav-tabs ">
                            <li class="active">
                                <a href="#jb" data-toggle="tab">
                                    基本信息
                                </a>
                            </li>
                            @*<li><a href="#img" data-toggle="tab">上传缩略图</a></li>*@
                        </ul>
                        <div id="myTabContent" class="tab-content mtop1 m-t-lg">
                            <div class="tab-pane in active" id="jb">
                                <div class="form-group">
                                    <label for="title" class="col-sm-2 ">链接名称</label>
                                    <div class="col-sm-10">
                                        <input type="text" value="@Model.linkname" name="linkname" id="linkname" class="form-control" required data-bv-notempty-message="不能为空！" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="title" class="col-sm-2 ">链接地址</label>
                                    <div class="col-sm-10">
                                        <input type="text" value="@Model.linkurl" name="linkurl" id="linkurl" class="form-control" required data-bv-notempty-message="不能为空！" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="title" class="col-sm-2 ">序号</label>
                                    <div class="col-sm-10">
                                        <input type="text" value="@Model.infosoft" name="infosoft" id="infosoft" class="form-control" required data-bv-notempty-message="点击率不能为空！" pattern="^[0-9]+$" data-bv-regexp-message="点击率必须是整数" />
                                    </div>
                                </div>
                            </div>
                            @*<div class="tab-pane" id="img">
                            <div class="col-sm-12">

                                <div class="form-group">
                                    <label for="txt_file">上传图片</label>
                                    <input type="file" name="txt_file" id="txt_file" multiple class="file-loading" />
                                </div>


                                <div class="form-group">
                                    <label for="txt_file">已上传图片</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">默认显示</span>
                                        <input type='text' name="linkimg" id="linkimg" class="form-control" value="@Model.linkimg" />
                                        <input type='hidden' name="uploadfiles" id="uploadfiles" value="@Model.uploadfiles" />
                                    </div>
                                </div>

                                <div class="listimg" id="lisgimg">

                                </div>

                            </div>
                        </div>*@
                        </div>
                        <div class="form-group mtop1">
                            <div class=" col-sm-12 tc">
                                <button type="submit" class="btn btn-primary">全部提交</button>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
         
    <script>
        var u = new shownr();
        u.init("linkimg", "uploadfiles", "lisgimg");
        u.show_img("");
        $(document).ready(function () {
            var s = new Valform();
            s.check("form2", true);
            var oFileInput = new FileInput();
            oFileInput.Init("txt_file", instrut);
        });
        function instrut(f) {
            u.show_img(f);
        }
    </script>

</body>
</html>
